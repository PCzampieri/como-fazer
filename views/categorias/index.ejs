<%- include('../header') %>
<br/>
<div class="container">
  <a class="btn btn-info mr-3" href="/publicacoes/nova">Nova Publicação</a>
  <a class="btn btn-info" href="/categorias/nova">Nova Categoria</a><br />
  <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">Categoria</th>
          <th scope="col">Ações</th>        
        </tr>
      </thead>
      <tbody>
      <% categorias.forEach(categoria => { %>
        <tr>
          <td>
            <a href="/publicacoes/categoria/<%= categoria.id %>">          
               <%= categoria.categoria %>
            </a></td>
          <td>
              <a href="/categorias/editar/<%= categoria.id %>">Editar</a>
              <a href="/categorias/excluir/<%= categoria.id %>">Excluir</a><br />
          </td>       
        </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
  <%- include('../footer') %>